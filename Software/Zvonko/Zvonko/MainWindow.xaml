<Window x:Class="Zvonko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zvonko"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="White">
    <StackPanel Orientation="Vertical">
        <TextBlock>Welcome:</TextBlock>
        <StackPanel Orientation="Horizontal">
            <Label HorizontalAlignment="Stretch">Day you entered:</Label>
            <TextBox Width="300px" x:Name="txtPickedDate"></TextBox>
            <Button Width="398" Background="LightGray" BorderThickness="0px" x:Name="btnOpenCalendar" Click="btnOpenCalendar_Click">Choose date</Button>
        </StackPanel>
        <DataGrid Height="225px" Margin="5px"></DataGrid>
        <StackPanel>
            <Button Margin="5px">Add a new sound</Button>
            <Button Margin="5px">Manage the schedule</Button>
            <Button Margin="5px">Add an event</Button>
            <Button Margin="5px">Live broadcast</Button>
            <Button Margin="5px">Emergency</Button>

        </StackPanel>
    </StackPanel>
</Window>
